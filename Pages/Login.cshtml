@page
@model EastOutHotel.Pages.LoginModel
@{
    ViewBag.Title = "Login - East Out Hotel";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>

    <link rel="stylesheet" href="@Url.Content("~/css/style.css")">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700&family=Playfair+Display:wght@700&display=swap" rel="stylesheet">
    <link rel="icon" type="image/png" href="@Url.Content("~/images/logo.png")">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body class="page-no-scroll">

    @Html.Partial("_Header")

    <main class="page-content">
        <section class="discover-section auth-panel">
            <h2 class="room-page-title" data-key="login_title">Login</h2>

            <!-- Show messages -->
            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <div class="alert alert-danger">@Model.ErrorMessage</div>
            }

            @if (!string.IsNullOrEmpty(Model.SuccessMessage))
            {
                <div class="alert alert-success">@Model.SuccessMessage</div>
            }

            <form method="post">
                <div class="form-group">
                    <label asp-for="Username" data-key="login_username"></label>
                    <input asp-for="Username" class="form-control" />
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Password" data-key="login_password"></label>
                    <input asp-for="Password" type="password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-book btn-full-width" data-key="login_title">
                    Login
                </button>
            </form>

            <p class="auth-switch">
                <span data-key="login_no_account">Don't have an account?</span>
                <a asp-page="/Register" data-key="login_register_here">Register here</a>
            </p>
        </section>
    </main>

    @Html.Partial("_Footer")

    <script src="@Url.Content("~/js/translation.js")"></script>
    <script src="@Url.Content("~/js/script.js")"></script>

    <partial name="_ValidationScriptsPartial" />
</body>
</html>