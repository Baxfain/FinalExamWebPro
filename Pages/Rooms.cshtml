@page
@model EastOutHotel.Pages.RoomsModel
@{
    ViewBag.Title = "Our Rooms - East Out Hotel";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>

    <link rel="stylesheet" href="@Url.Content("~/css/style.css")">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700&family=Playfair+Display:wght@700&display=swap" rel="stylesheet">
    <link rel="icon" type="image/png" href="@Url.Content("~/images/logo.png")">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>

<body class="page-no-scroll">

    <!-- Header Partial -->
    @Html.Partial("_Header")

    <main class="page-content">
        <section class="content-grid-section">
            <div class="container">
                <h2 class="room-page-title" data-key="rooms_title">Our Rooms</h2>

                <div class="room-listing">

                    <!-- Deluxe Room -->
                    <div class="room-type-card">
                        <img src="@Url.Content("~/images/Deluxe.jpg")" alt="Deluxe Room">
                        <div class="room-type-details">
                            <h3 data-key="room_deluxe">Deluxe Room</h3>
                            <div class="room-meta" data-key="room_deluxe_meta">
                                Size: 35 sqm / 376 sqft
                            </div>
                            <p data-key="room_deluxe_desc">
                                Our Deluxe Rooms offer a perfect blend of comfort and style,
                                featuring a plush king-sized bed, a modern bathroom, and serene views.
                            </p>
                            <a href="@Url.Page("/Booking", new { room = "deluxe" })"
                               class="btn btn-book"
                               data-key="book_now">
                                Book Now
                            </a>
                        </div>
                    </div>

                    <!-- Executive Suite -->
                    <div class="room-type-card">
                        <img src="@Url.Content("~/images/Executive.jpg")" alt="Executive Suite">
                        <div class="room-type-details">
                            <h3 data-key="room_executive">Executive Suite</h3>
                            <div class="room-meta" data-key="room_executive_meta">
                                Size: 50 sqm / 538 sqft
                            </div>
                            <p data-key="room_executive_desc">
                                Ideal for business or leisure, the Executive Suite provides a spacious
                                living area, a private workstation, and club lounge access.
                            </p>
                            <a href="@Url.Page("/Booking", new { room = "executive" })"
                               class="btn btn-book"
                               data-key="book_now">
                                Book Now
                            </a>
                        </div>
                    </div>

                    <!-- Luxury Villa -->
                    <div class="room-type-card">
                        <img src="@Url.Content("~/images/Luxurious.jpg")" alt="Luxury Villa">
                        <div class="room-type-details">
                            <h3 data-key="room_luxury">Luxury Villa</h3>
                            <div class="room-meta" data-key="room_luxury_meta">
                                Size: 75 sqm / 807 sqft
                            </div>
                            <p data-key="room_luxury_desc">
                                Experience ultimate privacy with a private plunge pool,
                                expansive terrace, and personalized butler service.
                            </p>
                            <a href="@Url.Page("/Booking", new { room = "luxury" })"
                               class="btn btn-book"
                               data-key="book_now">
                                Book Now
                            </a>
                        </div>
                    </div>

                </div>
            </div>
        </section>
    </main>

    <!-- Footer Partial -->
    @Html.Partial("_Footer")

    <script src="@Url.Content("~/js/translation.js")"></script>
    <script src="@Url.Content("~/js/script.js")"></script>

</body>
</html>