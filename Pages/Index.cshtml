@page
@model EastOutHotel.Pages.IndexModel
@{
    ViewBag.Title = "East Out Hotel - Home";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    
    <link rel="stylesheet" href="@Url.Content("~/css/style.css")">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700&family=Playfair+Display:wght@700&display=swap" rel="stylesheet">
    <link rel="icon" type="image/png" href="@Url.Content("~/images/logo.png")">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body>

    <!-- Include header using RenderSection or partial view -->
    @Html.Partial("_Header")

    <div id="the-sun"></div>
    <div id="the-moon"></div>

    <main class="page-content">
        <section class="discover-section">
            <div class="container">
                <h2>Discover East Out Hotel</h2>
                <p class="subtitle">Your adventure begins here</p>
                <p class="description">
                    Ready for a sun-drenched escape? Sitting at the heart of the mountains, our hotel is a lovingly developed Finca, blending rustic charm with modern luxury for an intimate, 27-bedroom experience.
                </p>
            </div>
        </section>

        <section class="content-grid-section">
            <div class="container">
                <div class="grid-row">
                    <div class="grid-text">
                        <h3>Staying at Eastout</h3>
                        <p>Choose from our 27 beautifully designed rooms...</p>
                        <a href="@Url.Action("Rooms", "Home")" class="explore-link">Explore Rooms <i class="fas fa-arrow-right"></i></a>
                    </div>
                    <div class="grid-image">
                        <img src="@Url.Content("~/images/Hotel.jpg")" alt="Hotel Room Interior">
                    </div>
                </div>
                
                <div class="grid-row row-reverse">
                    <div class="grid-text">
                        <h3>Dining</h3>
                        <p>Savour authentic local dishes...</p>
                    </div>
                    <div class="grid-image">
                        <img src="@Url.Content("~/images/dining.jpg")" alt="Restaurant Dining">
                    </div>
                </div>
            </div>
        </section>

        <section class="newsletter-section">
            <div class="container">
                <a href="#">Sign up to our newsletter <i class="fas fa-arrow-right"></i></a>
            </div>
        </section>
    </main>

    <!-- Include footer using Partial View -->
    @Html.Partial("_Footer")

    <script src="@Url.Content("~/js/translation.js")"></script>
    <script src="@Url.Content("~/js/script.js")"></script>

</body>
</html>
