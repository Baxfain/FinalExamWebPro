@page
@model EastOutHotel.Pages.RegisterModel
@{
    ViewBag.Title = "Register - East Out Hotel";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>

    <link rel="stylesheet" href="@Url.Content("~/css/style.css")">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700&family=Playfair+Display:wght@700&display=swap" rel="stylesheet">
    <link rel="icon" type="image/png" href="@Url.Content("~/images/logo.png")">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>

<body class="page-no-scroll">

    <!-- Header -->
    @Html.Partial("_Header")

    <main class="page-content">
        <section class="discover-section auth-panel">
            <h2 class="room-page-title" data-key="register_title">Create Account</h2>

            <!-- Display error message -->
            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <div class="alert alert-danger">@Model.ErrorMessage</div>
            }

            <form method="post">
                <div class="form-group">
                    <label asp-for="Username" data-key="register_username"></label>
                    <input asp-for="Username" class="form-control" />
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="FullName" data-key="register_full_name"></label>
                    <input asp-for="FullName" class="form-control" />
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="PhoneNumber" data-key="register_phone"></label>
                    <input asp-for="PhoneNumber" type="tel" class="form-control" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>

                <div class="form-row">
                    <div class="form-group">
                        <label asp-for="Gender" data-key="register_gender"></label>
                        <select asp-for="Gender" class="summary-select">
                            <option value="" data-key="register_gender_select">Select...</option>
                            <option value="M" data-key="register_gender_male">Male</option>
                            <option value="F" data-key="register_gender_female">Female</option>
                        </select>
                        <span asp-validation-for="Gender" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="BirthDate" data-key="register_birthdate"></label>
                        <input asp-for="BirthDate" type="date" class="form-control" />
                        <span asp-validation-for="BirthDate" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="Password" data-key="register_password"></label>
                    <input asp-for="Password" type="password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="RePassword" data-key="register_re_password"></label>
                    <input asp-for="RePassword" type="password" class="form-control" />
                    <span asp-validation-for="RePassword" class="text-danger"></span>
                </div>

                <button type="submit"
                        class="btn btn-book btn-full-width"
                        data-key="register_button">
                    Register
                </button>
            </form>

            <p class="auth-switch">
                <span data-key="register_have_account">Already have an account?</span>
                <a asp-page="/Login" data-key="register_login_here">Login here</a>
            </p>
        </section>
    </main>

    <!-- Footer -->
    @Html.Partial("_Footer")

    <script src="@Url.Content("~/js/translation.js")"></script>
    <script src="@Url.Content("~/js/script.js")"></script>

    <!-- Client-side validation -->
    <partial name="_ValidationScriptsPartial" />
</body>
</html>