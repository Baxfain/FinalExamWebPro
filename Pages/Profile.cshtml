@page
@model EastOutHotel.Pages.ProfileModel
@{
    ViewBag.Title = "My Profile - East Out Hotel";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>

    <link rel="stylesheet" href="@Url.Content("~/css/style.css")">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700&family=Playfair+Display:wght@700&display=swap" rel="stylesheet">
    <link rel="icon" type="image/png" href="@Url.Content("~/images/logo.png")">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>

<body class="page-no-scroll">

    <!-- Header -->
    @Html.Partial("_Header")

    <main class="page-content">
        <section class="discover-section auth-panel">

            <h2 class="room-page-title" id="welcome-heading">
                Welcome, @Model.Username!
            </h2>

            <div class="profile-details">
                <h3>Your Details</h3>

                <div class="form-group">
                    <label>Username</label>
                    <input type="text" value="@Model.Username" readonly>
                </div>

                <div class="form-group">
                    <label>Full Name</label>
                    <input type="text" value="@Model.FullName" readonly>
                </div>

                <div class="form-group">
                    <label>Email Address</label>
                    <input type="email" value="@Model.Email" readonly>
                </div>

                <div class="form-group">
                    <label>Phone Number</label>
                    <input type="tel" value="@Model.PhoneNumber" readonly>
                </div>

                <div class="form-row">
                    <div class="form-group">
                        <label>Gender</label>
                        <input type="text" value="@Model.Gender" readonly>
                    </div>

                    <div class="form-group">
                        <label>Birthdate</label>
                        <input type="text" value="@Model.BirthDate" readonly>
                    </div>
                </div>
            </div>

            <form method="post" asp-page-handler="Logout">
                <button type="submit"
                        id="logout-button"
                        class="btn btn-book btn-full-width">
                    Logout
                </button>
            </form>

        </section>
    </main>

    <!-- Footer -->
    @Html.Partial("_Footer")

    <script src="@Url.Content("~/js/translation.js")"></script>
    <script src="@Url.Content("~/js/script.js")"></script>

</body>
</html>