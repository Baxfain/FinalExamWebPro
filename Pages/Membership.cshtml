@page
@model EastOutHotel.Pages.MembershipModel
@{
    ViewBag.Title = "Membership - East Out Hotel";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>

    <link rel="stylesheet" href="@Url.Content("~/css/style.css")">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700&family=Playfair+Display:wght@700&display=swap" rel="stylesheet">
    <link rel="icon" type="image/png" href="@Url.Content("~/images/logo.png")">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>

<body class="page-no-scroll">

    <!-- Header -->
    @Html.Partial("_Header")

    <main class="page-content">
        <section class="discover-section">

            <h2 class="room-page-title" data-key="membership_title">
                Our Membership
            </h2>

            <p class="description"
               style="max-width: 600px; margin: 0 auto 40px;"
               data-key="membership_subtitle">
                Join our exclusive membership program to enjoy discounts and special benefits on every stay.
            </p>

            <div class="membership-grid">

                <!-- Basic -->
                <div class="membership-card">
                    <h3 data-key="membership_basic_name">Basic</h3>
                    <div class="membership-price" data-key="membership_basic_price">Free</div>
                    <div class="membership-discount" data-key="membership_basic_discount">0% Discount</div>
                    <p data-key="membership_basic_desc">
                        For anyone who has an EastOut account. Access all features without additional benefits.
                    </p>
                    <p class="membership-note" data-key="membership_basic_note">
                        Default membership for all customers.
                    </p>
                </div>

                <!-- VIP -->
                <div class="membership-card active">
                    <h3 data-key="membership_vip_name">VIP</h3>
                    <div class="membership-price">Rp5.000.000</div>
                    <div class="membership-discount" data-key="membership_vip_discount">25% Discount</div>
                    <p data-key="membership_vip_desc">
                        Our best friends receive a 25% discount on every transaction
                        and a special birthday present.
                    </p>
                    <a asp-page="/MembershipJoin"
                       asp-route-level="vip"
                       class="btn btn-book"
                       data-key="join_now">
                        Join Now
                    </a>
                </div>

                <!-- VVIP -->
                <div class="membership-card">
                    <h3 data-key="membership_vvip_name">VVIP</h3>
                    <div class="membership-price">Rp9.000.000</div>
                    <div class="membership-discount" data-key="membership_vvip_discount">50% Discount</div>
                    <p data-key="membership_vvip_desc">
                        Family members receive a 50% discount, free meals twice a week,
                        and a special birthday present.
                    </p>
                    <a asp-page="/MembershipJoin"
                       asp-route-level="vvip"
                       class="btn btn-book"
                       data-key="join_now">
                        Join Now
                    </a>
                </div>

            </div>
        </section>
    </main>

    <!-- Footer -->
    @Html.Partial("_Footer")

    <script src="@Url.Content("~/js/translation.js")"></script>
    <script src="@Url.Content("~/js/script.js")"></script>

</body>
</html>